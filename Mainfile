# Main E-Learning Application File
print("Welcome to the E-Learning Application!")

# Basic Menu
print("1. Login")
print("2. Register")
print("3. Exit")

choice = int(input("Enter your choice: "))

if choice == 1:
    print("Login functionality coming soon!")
elif choice == 2:
    print("Registration functionality coming soon!")
elif choice == 3:
    print("Thank you for using the E-Learning Application!")
else:
    print("Invalid choice. Please try again.")

# User Authentication Feature
print("Welcome to the E-Learning Application!")

# User Authentication
users = {"admin": "password123"}  # Predefined users

username = input("Enter your username: ")
password = input("Enter your password: ")

# Course Management Feature
print("Welcome to the E-Learning Application!")

# Manage Courses
courses = []

while True:
    print("\nCourse Management")
    print("1. Add a Course")
    print("2. View Courses")
    print("3. Exit")

    choice = int(input("Enter your choice: "))

    if choice == 1:
        course_name = input("Enter the course name: ")
        courses.append(course_name)
        print(f"Course '{course_name}' added successfully!")
    elif choice == 2:
        print("\nAvailable Courses:")
        for course in courses:
            print(f"- {course}")
    elif choice == 3:
        print("Exiting Course Management...")
        break
    else:
        print("Invalid choice. Please try again.")


if username in users and users[username] == password:
    print("Login successful!")
else:
    print("Invalid username or password.")

# Quiz Feature
print("Welcome to the E-Learning Application!")

# Simple Quiz
questions = {
    "What is 2 + 2?": "4",
    "What is the capital of France?": "Paris",
    "Who wrote 'To Kill a Mockingbird'?": "Harper Lee"
}

score = 0

print("\nQuiz Time!")
for question, answer in questions.items():
    user_answer = input(f"{question} ")
    if user_answer.strip().lower() == answer.lower():
        print("Correct!")
        score += 1
    else:
        print(f"Wrong! The correct answer is {answer}.")

print(f"\nYour total score is {score}/{len(questions)}.")

